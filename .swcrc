{
  "$schema": "https://json.schemastore.org/swcrc",
  "sourceMaps": true,
  "jsc": {
    "target": "es2021",
    "parser": {
      "syntax": "typescript",
      "dynamicImport": true,
      "decorators": true,
      "dts": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "baseUrl": ".",
    "preserveAllComments": true,
    "paths": {
      "@core/*": ["./src/core/*"],
      "@database/*": ["./src/database/*"]
    }
  },
  "module": {
    "type": "commonjs"
  },
  "minify": false
}
