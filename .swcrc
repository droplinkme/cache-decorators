{
  "$schema": "https://json.schemastore.org/swcrc",
  "sourceMaps": true,
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "baseUrl": "./",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@database/*": ["./src/database/*"]
    }
  },
  "module": {
    "type": "commonjs"
  },
  "minify": false
}
